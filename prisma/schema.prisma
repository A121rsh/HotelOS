// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// SYSTEM CORE (✅ NEW)
// =======================
model SystemConfig {
  id              String   @id @default("singleton")
  siteName        String   @default("HotelOS")
  siteLogo        String?
  supportEmail    String   @default("support@hotelos.com")
  
  // SMTP Settings (Encrypted in real apps)
  smtpHost        String?
  smtpPort        Int?
  smtpUser        String?
  smtpPass        String?
  
  // State Management
  isMaintenanceMode Boolean @default(false)
  maintenanceMessage String? @default("System is undergoing scheduled synchronization. Please stand by.")
  
  // Theme
  primaryColor    String   @default("#2563eb")
  allowDarkMode   Boolean  @default(true)

  updatedAt       DateTime @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  type        String   // "LOGIN", "FAILED_LOGIN", "LOGOUT", "ADMIN_ACTION", "PAYMENT", "ERROR"
  severity    String   @default("INFO") // "INFO", "WARNING", "CRITICAL"
  
  message     String
  metadata    Json?    // Optional debug data
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  hotelId     String?
  hotel       Hotel?   @relation(fields: [hotelId], references: [id])
  
  ipAddress   String?
  userAgent   String?

  createdAt   DateTime @default(now())
}

// =======================
// USER ROLES
// =======================
enum Role {
  ADMIN   // Super Admin (SaaS Owner)
  OWNER   // Hotel Owner
  MANAGER // Hotel Staff
}

// =======================
// USER MODEL
// =======================
model User {
  id            String    @id @default(cuid())
  firstName     String?
  lastName      String?
  name          String?
  email         String    @unique
  password      String?
  country       String?
  state         String?
  role          Role      @default(OWNER)

  // OWNER RELATION (1 Hotel : 1 Owner)
  ownedHotel    Hotel?    @relation("HotelOwner")

  // STAFF RELATION (Many staff : 1 Hotel)
  workingAtId   String?
  workingAt     Hotel?    @relation("HotelStaff", fields: [workingAtId], references: [id])

  // AUDIT TRAIL
  createdBookings Booking[] @relation("BookingCreator")

  // TASKS
  tasks         Task[]

  // PERMISSIONS
  permissions   String[]  @default([])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  auditLogs     AuditLog[]
}

// =======================
// SAAS SUBSCRIPTION MODELS (✅ NEW PHASE 2)
// =======================

model SubscriptionPlan {
  id          String   @id @default(cuid())
  name        String   // "Free", "Basic", "Premium"
  slug        String   @unique // "free", "basic", "premium"
  description String?
  price       Float    // Monthly Price
  currency    String   @default("INR")
  
  // Limits
  maxRooms    Int      // e.g. 5, 20, 100
  maxBookings Int      // e.g. 50, 500, Unlimited(-1)
  
  features    String[] // ["Wifi", "Analytics", "Support"]
  
  subscriptions Subscription[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
  PAST_DUE
  PENDING_APPROVAL
}

model Subscription {
  id          String             @id @default(cuid())
  
  hotelId     String             @unique
  hotel       Hotel              @relation(fields: [hotelId], references: [id])
  
  planId      String
  plan        SubscriptionPlan   @relation(fields: [planId], references: [id])
  
  status      SubscriptionStatus @default(ACTIVE)
  
  // Dates
  startDate   DateTime           @default(now())
  endDate     DateTime           // When does this cycle end?
  canceledAt  DateTime?
  
  // Razorpay Subscription ID (Recurring)
  razorpaySubscriptionId String? 
  
  invoices    SubscriptionInvoice[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// =======================
// HOTEL MODEL
// =======================
model Hotel {
  id          String    @id @default(cuid())
  name        String
  mobile      String
  hotelEmail  String

  gstNumber   String?
  address     String?
  panNo       String?
  aadharNo    String?
  logo        String?
  
  // ✅ NEW: Enhanced Content for Public Engine
  amenities   String[]   @default([])
  images      String[]   @default([])

  // ✅ NEW: SaaS Subscription Fields (Phase 2 Update)
  subscription Subscription?
  
  isActive        Boolean   @default(true) // Admin can ban hotel by setting false
  isMaintenanceMode Boolean @default(false)
  blockedFeatures String[] @default([])

  // OWNER RELATION
  userId      String?   @unique
  user        User?     @relation("HotelOwner", fields: [userId], references: [id])

  // STAFF RELATION
  staff       User[]    @relation("HotelStaff")

  rooms       Room[]
  bookings    Booking[]
  tasks       Task[]
  
  // ✅ NEW: Channel Manager
  channels    Channel[]
  
  // Invoice History
  invoices    SubscriptionInvoice[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  auditLogs   AuditLog[]
}

// =======================
// SAAS INVOICES
// =======================
model SubscriptionInvoice {
  id          String   @id @default(cuid())
  amount      Float
  status      String   // PENDING, PAID, REJECTED
  invoiceUrl  String?  // PDF Link
  screenshotUrl String?
  paymentId   String?  // Razorpay Payment ID or similar
  
  // Dates
  startDate   DateTime?
  endDate     DateTime?
  
  hotelId     String
  hotel       Hotel    @relation(fields: [hotelId], references: [id])
  
  planId      String?
  
  subscriptionId String?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])

  createdAt   DateTime @default(now())
}

// =======================
// TASK MANAGEMENT
// =======================
model Task {
  id           String   @id @default(cuid())
  title        String
  description  String?
  status       String   @default("PENDING") 
  
  hotelId      String
  hotel        Hotel    @relation(fields: [hotelId], references: [id], onDelete: Cascade)

  assignedToId String
  assignedTo   User     @relation(fields: [assignedToId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
}

// =======================
// CHANNEL MANAGER (✅ NEW PHASE 3)
// =======================

enum ChannelType {
  BOOKING_COM
  AIRBNB
  EXPEDIA
  AGODA
  ICAL
}

enum SyncStatus {
  SUCCESS
  FAILED
  PENDING
}

model Channel {
  id              String      @id @default(cuid())
  name            String      // e.g. "Airbnb - Beachfront"
  type            ChannelType
  
  // Credentials / Auth
  apiKey          String?     
  apiSecret       String?
  vendorId        String?     // External ID
  iCalUrl         String?     // For iCal based sync
  
  isActive        Boolean     @default(true)
  lastSyncAt      DateTime?
  
  hotelId         String
  hotel           Hotel       @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  
  mappings        ChannelMapping[]
  syncLogs        ChannelSyncLog[]
  bookings        Booking[]

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model ChannelMapping {
  id              String      @id @default(cuid())
  
  externalRoomId  String      // ID on the OTA
  externalRateId  String?     // Rate plan ID on OTA
  
  // Pricing Strategy
  markupType      String      @default("PERCENTAGE") // "PERCENTAGE" or "FIXED"
  markupValue     Float       @default(0)            // e.g. 15% or ₹500
  
  channelId       String
  channel         Channel     @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  roomId          String
  room            Room        @relation(fields: [roomId], references: [id], onDelete: Cascade)

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@unique([channelId, roomId])
}

model ChannelSyncLog {
  id              String      @id @default(cuid())
  type            String      // "ARI_PUSH", "RESERVATION_PULL"
  status          SyncStatus  @default(PENDING)
  message         String?
  payload         Json?       // The data sent/received
  
  channelId       String
  channel         Channel     @relation(fields: [channelId], references: [id], onDelete: Cascade)

  createdAt       DateTime    @default(now())
}

// =======================
// ROOM MANAGEMENT
// =======================
enum RoomStatus {
  AVAILABLE
  BOOKED
  DIRTY
  MAINTENANCE
}

model Room {
  id        String     @id @default(cuid())
  number    String
  type      String
  price     Float
  status    RoomStatus @default(AVAILABLE)

  image     String?    
  
  // ✅ NEW: Enhanced Room Content
  amenities String[]   @default([])
  images    String[]   @default([])

  hotelId   String
  hotel     Hotel      @relation(fields: [hotelId], references: [id])

  bookings  Booking[]
  
  // ✅ NEW: Channel Links
  channelMappings ChannelMapping[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([hotelId, number])
}

// =======================
// BOOKINGS
// =======================
enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
}

model Booking {
  id          String        @id @default(cuid())
  guestName   String
  guestMobile String
  guestEmail  String?

  idType      String
  idNumber    String
  idImage     String?

  checkIn     DateTime
  checkOut    DateTime

  totalAmount Float
  paidAmount  Float         @default(0)
  dueAmount   Float         @default(0)

  status      BookingStatus @default(CONFIRMED)

  // ✅ NEW: Channel Info
  source          String        @default("DIRECT") // "DIRECT", "CHANNEL_MANAGER"
  channelId       String?
  channel         Channel?      @relation(fields: [channelId], references: [id])
  externalBookingId String?     // ID on the OTA

  roomId      String
  room        Room          @relation(fields: [roomId], references: [id])

  hotelId     String
  hotel       Hotel         @relation(fields: [hotelId], references: [id])
   
  createdById String?       
  createdBy   User?         @relation("BookingCreator", fields: [createdById], references: [id])

  payments    Payment[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// =======================
// PAYMENTS
// =======================
enum PaymentMode {
  CASH
  UPI
  CARD
  BANK_TRANSFER
  ONLINE
}

enum PaymentType {
  ADVANCE
  FULL_PAYMENT
  DUE_CLEARANCE
}

model Payment {
  id        String      @id @default(cuid())
  amount    Float
  mode      PaymentMode
  type      PaymentType

  bookingId String
  booking   Booking     @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  createdAt DateTime    @default(now())
}